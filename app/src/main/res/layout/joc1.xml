<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teclesipedals">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="739dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titolCantates"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#66000000"
            android:gravity="center"
            android:text="PREGUNTES"
            android:textColor="#FAF8F8"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewPregunta"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:background="#66000000"
            android:gravity="center"
            android:text="    BUSQUEU AQUEST CARREU I SITUEU-LO AL PLÀNOL. (CAL RESPONDRE PER AVANÇAR)"
            android:textColor="#FFFCFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            app:srcCompat="@drawable/p1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton1"
                style="@style/Theme.imatgebutton"
                app:srcCompat="@drawable/i1" />

            <ImageButton
                android:id="@+id/imageButton2"
                style="@style/Theme.imatgebutton"
                app:srcCompat="@drawable/i2" />

            <ImageButton
                android:id="@+id/imageButton3"
                style="@style/Theme.imatgebutton"
                app:srcCompat="@drawable/i3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton4"
                style="@style/Theme.imatgebutton"
                app:srcCompat="@drawable/i4" />

            <ImageButton
                android:id="@+id/imageButton5"
                style="@style/Theme.imatgebutton"
                app:srcCompat="@drawable/i5" />

            <ImageButton
                android:id="@+id/imageButton6"
                style="@style/Theme.imatgebutton"
                app:srcCompat="@drawable/i6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="#66000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                style="@style/Theme.nomcontadors"
                android:text="CORRECTES;"
                android:textColor="#68F106" />

            <EditText
                android:id="@+id/idTotalCorrectes"
                style="@style/Theme.contadors"
                android:textColor="#68F106"
                tools:text="0" />

            <TextView
                android:id="@+id/textView5"
                style="@style/Theme.nomcontadors"
                android:text="INCORRECTES;"
                android:textColor="#F30303" />

            <EditText
                android:id="@+id/idErrors"
                style="@style/Theme.contadors"
                android:textColor="#F30303" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/idInfo"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#DC6C3F"
                app:srcCompat="@android:drawable/ic_menu_info_details" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
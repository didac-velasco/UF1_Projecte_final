<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/botoFinal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/img_orgue">


    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="732dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/titolCantates"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#66000000"
            android:gravity="center"
            android:text="FINAL DEL JOC"
            android:textColor="#FAF8F8"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="186dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pCorrectes"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:background="#66000000"
                android:gravity="center"
                android:text="PREGUNTES CORRECTES"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#68F106"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/idEncerts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#66000000"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:textColor="#68F106"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pIncorrecte"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:background="#66000000"
                android:gravity="center"
                android:text="PREGUNTES INCORRECTES"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#EC0505"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/idErrors"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#66000000"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:textColor="#EC0505"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="307dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DC6C3F"
            android:text="PANTALLA INICI"
            android:textColor="#FDFAFA"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>